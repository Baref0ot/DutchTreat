@model ContactViewModel;
@{
    ViewBag.Title = "Contact Us";
}
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
}

<form method="post">
    <div asp-validation-summary="ModelOnly"></div>

    
    <label asp-for="Name">Name:</label><br />
    <input type="text" asp-for="Name" value="" />
    <span asp-validation-for="Name"></span>
    <br />

    <label asp-for="Email">Email:</label><br />
    <input type="email" asp-for="Email" value="" />
    <span asp-validation-for="Email"></span>
    <br />

    <label asp-for="Subject">Subject:</label><br />
    <input type="text" asp-for="Subject" value="" />
    <br />

    <label asp-for="Message">Message:</label><br />
    <textarea rows="3" asp-for="Message"></textarea>
    <span asp-validation-for="Message"></span>
    <br />

    <input type="submit" name="submit" value="Send Message" />
    <div>@ViewBag.UserMessage</div>
</form>